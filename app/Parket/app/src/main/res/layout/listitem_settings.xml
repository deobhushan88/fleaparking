<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:padding = "10dp"
        android:id="@+id/list_item_settings_icon"
        android:contentDescription="@string/text_settings_icon_description"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id = "@+id/list_item_settings_linear_layout">

        <TextView
            android:id="@+id/list_item_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding = "2dp"
            android:textAppearance="@style/ToolbarSmallTextStyle"
            android:textColor="@color/light_grey"
            />
        <TextView
            android:id="@+id/list_item_settings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding = "2dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

    </LinearLayout>
</LinearLayout>